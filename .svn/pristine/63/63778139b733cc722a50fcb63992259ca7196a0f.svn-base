<ion-view view-title="忘记密码" class="light account-withdraw-forgetPwd-view">

  <ion-nav-bar class="app-index-header">

    <ion-nav-buttons side="left">
      <a class="button button-icon icon ion-ios-arrow-left light" ng-click="goBack()"></a>
    </ion-nav-buttons>

  </ion-nav-bar>

  <ion-content class="">

    <!--输入信息-->
    <div class="list">

      <div class="item item-icon-left" style="z-index: 200">
        <i class="icon ion-ios-locked-outline"></i>
        <input id="phoneNumId" type="text" placeholder="请输入绑定的手机号码" ng-model="my.phoneNum">
        <!--获取验证码-->
        <button ng-bind="my.getCodeBtn" ng-click="getCode()"  ng-disabled="my.getCodeBtn != '获取验证码'"></button>
      </div>

      <div class="item item-icon-left">
        <i class="icon ion-ios-locked-outline"></i>
        <input class="input" type="text" placeholder="手机验证码" ng-model="my.code">
      </div>

    </div>

    <div class="tip" style="top: 15rem;">
      <div id="codeHadSendTipId" class="codeHadSendTip">验证码已发送，请查收</div>
      <div id="forgetPwd_errorTipId1" style="color: #d94d4e; display: none" ng-bind="my.errorTip"></div>
    </div>

    <div class="center" style="margin-top: 25%">
      <button class="button nextBtn" ng-click="next()">
        下一步</button>
    </div>

  </ion-content>
</ion-view>
